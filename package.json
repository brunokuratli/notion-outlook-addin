{
  "name": "notion-outlook-addin",
  "version": "1.0.0",
  "description": "Outlook Add-in to save emails and attachments to Notion",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:cf": "npm run build && cp -r functions dist/",
    "dev": "webpack serve --mode development",
    "start": "npm run dev",
    "certs": "office-addin-dev-certs install",
    "validate": "office-addin-manifest validate manifest.xml",
    "predeploy": "npm run build && cp manifest-github.xml dist/manifest.xml",
    "deploy": "gh-pages -d dist",
    "deploy:cf": "npm run build:cf && npx wrangler pages deploy dist --project-name=notion-outlook-addin"
  },
  "keywords": [
    "outlook",
    "notion",
    "addin",
    "email"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copy-webpack-plugin": "^13.0.1",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.6.6",
    "netlify-cli": "^23.13.5",
    "sharp": "^0.34.5",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "wrangler": "^4.59.3"
  },
  "dependencies": {
    "@netlify/blobs": "^10.5.0",
    "@notionhq/client": "^5.7.0",
    "office-addin-debugging": "^6.0.6",
    "office-addin-dev-certs": "^2.0.6"
  }
}
